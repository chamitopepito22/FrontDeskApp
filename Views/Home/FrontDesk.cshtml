@{
    ViewData["Title"] = "Front Desk";
    DateTime dtToday = Convert.ToDateTime(DateTime.Now.ToShortDateString());
    DateTime dtYesterday = Convert.ToDateTime("11/10/2008");

}

<div class="row">
    <div class="col-12">
        <h1 class="my-4">Front Desk</h1>
    </div>
</div>


<div class="row" id="mainForm">
    <div class="col-lg-12">
        <div class="card">
            <div class="row">
                <div class="col-12" style="color:white">
                    <a class="btn btn-info m-b-10 m-l-5" id="btnAddCustomer">Add Customer</a>
                    <a class="btn btn-primary m-b-10 m-l-5" id="btnAddFacilty">Add Facility</a>

                    <a class="btn btn-success  m-b-10 m-l-5" id="btnStorePackage">Store Package</a>
                    <a class="btn btn-warning  m-b-10 m-l-5" id="btnRetrievePackage">Retrieve Package</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-title">
                <h4>Customers </h4>

            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped" id="customers">
                        <thead>
                            <tr>
                                <th> </th>
                                <th>Name</th>
                                <th>Phone Number</th>
                                <th>Total Boxes</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- /# column -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-title">
                <h4>Facilities </h4>

            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped" id='facilities'>
                        <thead>
                            <tr>
                                <th width='200px'></th>
                                <th>Name</th>
                                <th>Small</th>
                                <th>Medium</th>
                                <th>Large</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>



<div class="row mt-5" id="addEditCustomer" style="display:none">

    <div class="col-lg-6">
        <div class="card">
            <div class="card-title">
                <h4>Add/Edit Customer Info</h4>

            </div>
            <div class="card-body">
                <div class="basic-form" id='form_customer'>
                    <form>

                        <label class="form-label">Id: <span id="customer_id" data-id=''></span> </label>
                        <div class="form-group">
                            <label>First Name:</label>
                            <input type="text" class="form-control" placeholder="First Name" id="customer_firstname" min='2' required>
                        </div>
                        <div class="form-group">
                            <label>Last Name:</label>
                            <input type="text" class="form-control" placeholder="Last Name" id="customer_lastname" min='3' required>
                        </div>
                        <div class="form-group">
                            <label>Phone Number:</label>
                            <input type="text" class="form-control" placeholder="Phone Number" id="customer_phonenumber" min='2' required>
                        </div>
                        <button type="submit" class="btn btn-success m-b-10 m-l-5">Save</button>
                        <button type="button" class="btn btn-warning m-b-10 m-l-5 btnCancel">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-5" id="addEditFacility" style="display:none">

    <div class="col-lg-6">
        <div class="card">
            <div class="card-title">
                <h4>Add/Edit Facility Info</h4>

            </div>
            <div class="card-body">
                <div class="basic-form" id='form_facility'>
                    <form>
                        <label class="form-label">Id: <span id="facility_id"></span> </label>
                        <div class="form-group">
                            <label>Name:</label>
                            <input type="text" class="form-control" placeholder="First Name" id="facility_name" min='4' required>
                        </div>


                        <div class="form-group">
                            <label>Small Box Max Count:</label>
                            <input type="number" class="form-control" placeholder="1-100" id="facility_smallmaxcount" min='1' max='100' required>
                        </div>

                        <div class="form-group">
                            <label>Medium Box Max Count:</label>
                            <input type="number" class="form-control" placeholder="1-100" id="facility_mediummaxcount" min='1' max='100' required>
                        </div>


                        <div class="form-group">
                            <label>Large Max Count:</label>
                            <input type="number" class="form-control" placeholder="1-100" id="facility_largemaxcount" min='1' max='100' required>
                        </div>



                        <button type="submit" class="btn btn-success m-b-10 m-l-5">Save</button>
                        <button type="button" class="btn btn-warning m-b-10 m-l-5 btnCancel">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="row mt-5" id="addStorage" style="display:none">

    <div class="col-lg-6">
        <div class="card">
            <div class="card-title">
                <h4>Store Package</h4>
            </div>
            <div class="card-body">
                <div class="basic-form" id='form_addStorage'>
                    <form>
                        <div class="form-group">
                            <label>Customer:</label>
                            <select class="form-control" id="addStorage_customer" required>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Facility:</label>
                            <select class="form-control" id="addStorage_facility" required>
                            </select>

                        </div>


                        <div class="form-group">
                            <label>Box Type:</label>
                            <select class="form-control" id="addStorage_boxtype" required>
                                <option value="1">Small</option>
                                <option value="2">Medium</option>
                                <option value="3">Large</option>
                            </select>

                        </div>

                        <div class="form-group">
                            <label>Notes:</label>
                            <textarea class="form-control" id="addStorage_notes" rows="3"></textarea>
                        </div>

                        <button type="submit" class="btn btn-success m-b-10 m-l-5">Store</button>
                        <button type="button" class="btn btn-warning m-b-10 m-l-5 btnCancel">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




