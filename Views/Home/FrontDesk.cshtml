                                        <option value="2">Medium</option>
                                        <option value="3">Large</option>
                                    </select>

                                </div>
                            </div>

                            <div class="col-md-3">

                                <div class="form-group">
                                    <label>Notes:</label>
                                    <input class="form-control" id="retrieveStorage_notes" />
                                </div>

                            </div>
                        </div>

